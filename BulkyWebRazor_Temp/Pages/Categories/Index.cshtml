@page
@model BulkyBookWebRazor_Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class=" col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class=" col-6 text-end">
            <a asp-page="/Categories/create" class="btn btn-primary">
                Create New Category
            </a>
        </div>
    </div>
    <table class="text-center table table-bordered, table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.categoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td class="align-content-center text-center">@item.Name</td>
                    <td class="align-content-center text-center">@item.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/categories/edit" asp-route-id = "@item.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-page="/categories/delete" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-trash3-fill"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>